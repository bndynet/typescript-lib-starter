{
  "compilerOptions": {
    "moduleResolution": "node",
    "module":"ESNext",
    "target": "ESNext",
    "lib": ["ESNext", "DOM"],
    "strict": true,
    "jsx": "react",
    "declaration": true,
    "declarationDir": "./dist",
    "declarationMap": true, 
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "listFiles": false,
    "outDir": "./dist",
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": ["node_modules", "dist", "**/*.spec.ts"] 
}